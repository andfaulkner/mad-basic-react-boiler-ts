{
  "name": "mad-react-boiler",
  "version": "1.0.0",
  "description": "Ultra-light starter for kicking off learning projects using React & Typescript",
  "main": "index.js",
  "repository": "https://github.com/Ottawa-mHealth/basic-ts-react-starter.git",
  "author": "Andrew Faulkner <andfaulkner@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build-all; node ./build/server/server.js",
    "build-all": "npm run build-client; npm run build-server",
    "build-client": "webpack --config ./config/webpack.config.js; cp ./app/client/index.html ./build/client/index.html",
    "build-server": "tsc -p ./app/server/tsconfig.json",
    "run": "node ./build/server/server.js",
    "watch-run": "nodemon --watch ./build/server --exec 'node ./build/server/server-root.js'",
    "watch-client": "nodemon --watch ./app/client --ext ts,tsx,json,css,scss --exec 'npm run build-client'",
    "watch-server": "nodemon --watch ./app/server --ext ts,tsx,json --exec 'npm run build-server'",
    "watch": "nodemon --watch ./app --ext ts,tsx,json,css,scss --exec 'npm run start'"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "clarify": "^2.1.0",
    "classnames": "^2.2.6",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "mad-logs": "^10.3.6",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rootpath": "^0.1.2",
    "trace": "^3.1.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^8.10.0",
    "@types/react": "^16.4.15",
    "@types/react-dom": "^16.0.8",
    "@types/webpack": "^4.4.14",
    "awesome-typescript-loader": "^5.2.1",
    "nodemon": "^1.18.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
