{
  "name": "mad-react-boiler",
  "version": "1.0.0",
  "description": "Light starter for kicking off learning projects using React & Typescript",
  "main": "index.js",
  "repository": "https://github.com/andfaulkner/mad-basic-react-boiler-ts",
  "author": "Andrew Faulkner <andfaulkner@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build-all; node ./build/server/server.js",
    "build-all": "npm run build-client; npm run build-server",
    "build-client": "TS_NODE_PROJECT=\"./tsconfig.json\" webpack --config ./config/webpack.config.ts; cp ./app/client/index.html ./build/client/index.html",
    "build-server": "tsc -p ./app/server/tsconfig.json",
    "prettier": "prettier --config .prettierrc --write \"./@(app|config|script|shared|spec|test|typings)/**/*.@(js|jsx|ts|tsx)\"",
    "run": "node ./build/server/server.js",
    "test": "jest",
    "watch-run": "nodemon --watch ./build/server --exec 'node ./build/server/server-root.js'",
    "watch-client": "node --trace-warnings ./node_modules/.bin/webpack --config ./config/webpack.config.ts --watch",
    "watch-server": "nodemon --watch ./app/server --ext ts,tsx,json --exec 'npm run build-server'",
    "watch": "nodemon --watch ./app --ext ts,tsx,json,css,scss --exec 'npm run start'"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "clarify": "^2.1.0",
    "classnames": "^2.2.6",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "mad-logs": "^11.0.0",
    "mad-utils": "^0.83.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "trace": "^3.1.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/enzyme": "^3.1.14",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.12.2",
    "@types/react": "^16.4.15",
    "@types/react-dom": "^16.0.8",
    "@types/react-test-renderer": "^16.0.3",
    "@types/webpack": "^4.4.14",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^1.0.0",
    "dart-sass": "^1.14.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "fibers": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.5.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.1",
    "vrsource-tslint-rules": "^5.8.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
