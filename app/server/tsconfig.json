{
    "version": "3.2.2",

    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",

        "target": "es5",
        "outDir": "../../build/server",
        "jsx": "react",

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "removeComments": false,
        "preserveConstEnums": false,

        "sourceMap": true,
        "allowJs": true,
        "pretty": true,

        "noImplicitAny": false,
        "skipLibCheck": true,
        "strictNullChecks": false,

        "lib": ["ES2018"],
        "typeRoots": [
            "../../typings",
            "../../node_modules/@types"
        ],
        "types": []
    },

    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "../../typings/project-typings.d.ts",
        "../../node_modules/@types/**/*.d.ts",
        "../../node_modules/**/*.d.ts"
    ],

    "exclude": [
        "*.js",
        "*.json"
    ]
}
